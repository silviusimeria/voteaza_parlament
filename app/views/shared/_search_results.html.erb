<% if @results.present? %>
  <div class="py-2">
    <% if @results[:candidates].any? %>
      <div class="px-4 py-2 text-xs font-semibold text-gray-500 bg-gray-50">CANDIDAȚI</div>
      <% @results[:candidates].each do |candidate| %>
        <%= link_to person_profile_path(candidate.slug), class: "block px-4 py-2 hover:bg-gray-100" do %>
          <div class="font-medium text-gray-900"><%= candidate.name %></div>
          <div class="text-sm text-gray-600">
            <%= candidate.party.name %> • <%= candidate.county.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>