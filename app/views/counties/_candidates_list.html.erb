<% senate_candidates = candidates.select { |c| c.kind == "senate" } %>
<% deputy_candidates = candidates.select { |c| c.kind == "deputy" } %>

<div class="flex space-x-4 divide-y divide-gray-100">
  <!-- Column for Senate Candidates -->
  <div class="w-1/2">
    <% senate_candidates.sort_by { |c| c.position }.each do |candidate| %>
      <div class="p-4 hover:bg-gray-50 transition-colors"
           data-candidate-slug="<%= candidate.slug %>">
        <div class="flex items-start gap-3">
          <div class="w-1 h-1 mt-2.5 rounded-full bg-gray-300"></div>
          <div class="flex-1 space-y-1">
            <%= link_to person_profile_path(candidate.slug), class: "block" do %>
              <div class="font-medium text-gray-900 hover:text-blue-600 flex items-center gap-2">
                <% if candidate.qualified %>
                 <span class="flex h-6 w-6 items-center justify-center rounded-full bg-green-100">
                   <svg class="h-4 w-4 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                     <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                   </svg>
                 </span>
                <% end %>
                <%= candidate.name %>
              </div>
              <div class="text-sm text-gray-500">
                Senator • Poziția <%= candidate.position %>
              </div>
            <% end %>

            <% if candidate.person.people_links.any? %>
              <div class="flex flex-wrap gap-3 mt-2">
                <% candidate.person.people_links.each do |link| %>
                  <%= link_to link.url,
                              class: "inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-800 group px-2 py-0.5 rounded-full bg-blue-50 hover:bg-blue-100 transition-colors",
                              target: "_blank",
                              rel: "noopener noreferrer" do %>
                    <span><%= link.kind %></span>
                    <svg class="w-3.5 h-3.5 transition-transform group-hover:translate-x-0.5"
                         viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Column for Deputy Candidates -->
  <div class="w-1/2">
    <% deputy_candidates.sort_by { |c| c.position }.each do |candidate| %>
      <div class="p-4 hover:bg-gray-50 transition-colors"
           data-candidate-slug="<%= candidate.slug %>">
        <div class="flex items-start gap-3">
          <div class="w-1 h-1 mt-2.5 rounded-full bg-gray-300"></div>
          <div class="flex-1 space-y-1">
            <%= link_to person_profile_path(candidate.slug), class: "block" do %>
              <div class="font-medium text-gray-900 hover:text-blue-600 flex items-center gap-2">
                <% if candidate.qualified %>
                 <span class="flex h-6 w-6 items-center justify-center rounded-full bg-green-100">
                   <svg class="h-4 w-4 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                     <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                   </svg>
                 </span>
                <% end %>
                <%= candidate.name %>
              </div>
              <div class="text-sm text-gray-500">
                Deputat • Poziția <%= candidate.position %>
              </div>
            <% end %>

            <% if candidate.person.people_links.any? %>
              <div class="flex flex-wrap gap-3 mt-2">
                <% candidate.person.people_links.each do |link| %>
                  <%= link_to link.url,
                              class: "inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-800 group px-2 py-0.5 rounded-full bg-blue-50 hover:bg-blue-100 transition-colors",
                              target: "_blank",
                              rel: "noopener noreferrer" do %>
                    <span><%= link.kind %></span>
                    <svg class="w-3.5 h-3.5 transition-transform group-hover:translate-x-0.5"
                         viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>