<div class="h-screen w-full overflow-hidden">
  <div class="inset-y-0 right-0 w-full bg-white shadow-xl flex flex-col h-full">
    <div class="flex flex-col px-6 py-4 border-b border-gray-200 bg-white">
      <div class="flex justify-between items-center">
        <div class="flex flex-col">
          <h2 class="text-xl font-bold text-gray-900">
            <%= @county.name %>
          </h2>
          <div class="text-sm text-gray-500 mt-1">
            <span class="mr-4">Senatori: <%= @county.election_county_data.find_by(election_id: 1).senate_seats %></span>
            <span>Deputați: <%= @county.election_county_data.find_by(election_id: 1).deputy_seats %></span>
          </div>
        </div>

        <div class="flex flex-col text-center">
          <span class="text-sm font-medium text-gray-700">Legendă rezultate:</span>
          <div class="text-xs text-gray-500 mt-1">
            <div class="text-blue-600">Senat: % voturi (mandate alocate)</div>
            <div class="text-green-600">Camera Deputaților % voturi (mandate alocate)</div>
            <div class="flex items-center justify-center space-x-4 mt-2">
              <div class="flex items-center">
                <span class="flex h-4 w-4 items-center justify-center rounded-full bg-green-100 mr-1">
                  <svg class="h-3 w-3 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                <span>Mandat activ</span>
              </div>
              <div class="flex items-center">
                <span class="flex h-4 w-4 items-center justify-center rounded-full bg-yellow-100 mr-1">
                  <svg class="h-3 w-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                <span>Mandat alocat</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex-1 overflow-y-auto bg-gray-50 min-h-0">
      <%= render partial: 'parties_list',
                 locals: {
                   county: @county,
                   party: @party,
                   candidate: @candidate
                 } %>
    </div>
  </div>
</div>